<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/dNames"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:text="TextView"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.352"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/arrow"
        android:layout_width="31dp"
        android:layout_height="22dp"
        android:layout_marginEnd="5dp"
        app:layout_constraintBottom_toBottomOf="@+id/dNames"
        app:layout_constraintEnd_toStartOf="@+id/dNames"
        app:layout_constraintTop_toTopOf="@+id/dNames"
        app:layout_constraintVertical_bias="0.566"
        app:srcCompat="@drawable/arrow_right" />

    <ListView
        android:id="@+id/dNameList"
        android:layout_width="0dp"
        android:layout_height="300dp"
        android:layout_marginTop="5dp"
        android:minHeight="300dp"
        android:scrollbars="vertical"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@+id/dNames"
        app:layout_constraintStart_toStartOf="@+id/dNames"
        app:layout_constraintTop_toBottomOf="@+id/dNames" />

</androidx.constraintlayout.widget.ConstraintLayout>